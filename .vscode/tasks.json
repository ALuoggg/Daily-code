{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang-14 生成活动文件",
			"command": "/usr/bin/clang-14",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-O0",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/a.out",
				"-Weverything",
				"-Werror",
				"-Wno-vla",
				"-Wno-gnu-folding-constant",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: /usr/bin/clang-14"
		},
	]
}