{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang-14 生成活动文件",
			"command": "/usr/bin/clang-14",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-O0",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}", // 指定编译后的文件名
				"-std=c17", // 指定C标准
				"-Weverything", // 开启所有警告
				"-Werror", // 把所有警告时为错误
				"-Wno-vla", // 忽略指定警告
				"-Wno-gnu-folding-constant", // 忽略指定警告
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: /usr/bin/clang-14"
		},
	]
}